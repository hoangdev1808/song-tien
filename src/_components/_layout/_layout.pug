block var

doctype html

html(lang="en")
	head
		title #{title}
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		link(rel="stylesheet" href="./css/core.min.css")
		link(rel="stylesheet" href="./css/main.min.css")
		link(rel='stylesheet' href='https://cdn.linearicons.com/free/1.0.0/icon-font.min.css')
		link(href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900&display=swap&subset=vietnamese" rel="stylesheet")
	body
		form(action="")
			#wrapper.ov-h
				block header
					include _header.pug
				block banner,breadcrumb
				main#pagepiling
					block main
					#js-page-verify(class=bodyClass hidden)
				block footer
					include _footer.pug
			include _tool.pug
			#searchfancybox.searchbox(style='display: none;')
				.container
					.content
						.form-group
							input.form-control(type="text" placeholder="Tìm kiếm...")
							button.searchbutton.btn.btn__search
								em.material-icons search
		script(type="text/javascript" src="./js/core.min.js")
		script(type="text/javascript" src="./js/main.min.js")
		script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js")
		block scripts